    "version": "0.2.0",
    "configurations": [
        {
            "name": "[DEBUG] Train ETTh1 96 96",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "args": [
                "--is_training",
                "1",
                "--root_path",
                "./dataset/ETT-small/",
                "--data_path",
                "ETTh1.csv",
                "--model_id",
                "ETTh1_96_96",
                "--model",
                "Testformer",
                "--data",
                "ETTh1",
                "--features",
                "M",
                "--seq_len",
                "96",
                "--pred_len",
                "96",
                "--e_layers",
                "2",
                "--enc_in",
                "7",
                "--dec_in",
                "7",
                "--c_out",
                "7",
                "--d_model",
                "256",
                "--d_ff",
                "256",
                "--itr",
                "1",
                "--des",
                "DEBUG",
                // "--use_wandb",
                "--wandb_notes",
                "${input:wandbNotes}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "wandbNotes",
            "type": "promptString",
            "description": "Enter wandb notes for this run",
            "default": "ðŸ”´DEBUG"
        }
    ]
}